@inject WindowManager WindowManager

<div class="channel-mention" @onclick="@OnClicked">
    @if (_targetChannel == null)
    {
        <div>#NotFound!</div>
    }
    else
    {
        <div>#@_targetChannel.Name</div>
    }
</div>

@code {
    
    [CascadingParameter]
    public Channel Channel { get; set; }

    [Parameter]
    public Mention Mention { get; set; }

    private Channel _targetChannel;

    protected override async Task OnInitializedAsync()
    {
        await Build();
    }

    protected override async Task OnParametersSetAsync()
    {
        if (_targetChannel != null)
        {
            if (Mention.TargetId != _targetChannel.Id)
            {
                await Build();
            }
        }
        else
        {
            await Build();
        }
    }

    public async Task Build()
    {
        if (Channel.PlanetId is not null)
        {
            _targetChannel = await Channel.FindAsync(Mention.TargetId, Channel.PlanetId.Value);
        }
        StateHasChanged();
    }

    public async Task OnClicked(){

        var window = WindowManager.GetSelectedWindow();
        if (window is ChatChannelWindow chatWindow)
        {
            await chatWindow.Component.SwapChannel(_targetChannel);
        }
    }
}
